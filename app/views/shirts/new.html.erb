<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new shirt</h1>
      <%= simple_form_for @shirt do |f| %>
        <%= f.input :team %>
        <%= f.input :gender %>
        <%= f.input :size %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

