<div class='container mt-5'>
  <div class='card-show'>
    
      <% if  @shirt.photo.attached?  %>
        <%= cl_image_tag @shirt.photo.key, height: 300, crop: :fill %>
      <% end %>
    
    <div class='card-show-info' >
      <h1><%= @shirt.team %></h1>
      <p>Gender: <%= @shirt.gender %></p>
      <p>Size: <%= @shirt.size %></p>
      <p>Price: <%= @shirt.price %></p>
        <div>
          <%= link_to 'Edit', edit_shirt_path(@shirt) %>
          <%= button_to 'Buy this Shirt',  shirt_orders_path(@shirt) , class: 'btn btn-primary'  %>
        </div>
    </div>


  </div>
    <%= link_to 'Back to home', shirts_path %>
</div>


