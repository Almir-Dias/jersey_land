
  <div class='container'>
<% image= "Europeus.jpg" %>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag('camisas.jpg', class: 'd-block', style: 'width: 100%; height: 300px; object-fit: cover; border-radius:30px', alt: 'Times europeus') %>
          <div class="carousel-caption d-none d-md-block">
          <h1 style="font-family: Pacifico, sans-serif;">Times europeus</h1>
          </div>
        </div>
        <div class="carousel-item" style= "border-radius: 10px;">
          <%= image_tag('Nacionais.jpg', class: 'd-block', style: 'width:100%; height: 300px; object-fit: cover; border-radius:30px', alt: 'Times nacionais') %>
          <div class="carousel-caption d-none d-md-block">
          <h1 style="font-family: Pacifico, sans-serif;">Times nacionais</h1>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag('camisas_seleções_2.jpg', class: 'd-block', style: 'width:100%; height: 300px; object-fit: cover; border-radius:30px', alt: 'Seleções') %>
          <div class="carousel-caption d-none d-md-block">
          <h1 style="font-family: Pacifico, sans-serif;">Seleções</h1>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <div class='row'>
      <% @shirts.each do |shirt| %>
        <div class='col-4'>
          <div class="card mt-3">

            <% if shirt.photo.attached?  %>
              <%= link_to shirt_path(shirt), class: 'card-img-top d-flex justify-content-center bg-white' do %>
                <%= cl_image_tag shirt.photo.key, crop: :fill, height: 300, width: 300 %>
              <% end %>
            <% end %>


            <div class="card-body">
              <h2><%= shirt.team %></h2>
              <p class="card-text">Camiseta Original por apenas <strong>R$<%= shirt.price %> </strong></p>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>

